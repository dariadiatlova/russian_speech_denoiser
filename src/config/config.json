{
  "name": "default_config",
  "n_gpu": 0,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "augmentations": {
    "wave": false,
    "spectrogram": false
  },
  "tokenizer": {
    "train_mode": true,
    "save_path": "/Users/diat.lov/GitHub/russian_speech_denoiser/data/saved/tokenizers/tokenizer_golos.json",
    "load_path": "/Users/diat.lov/GitHub/russian_speech_denoiser/data/saved/tokenizers/tokenizer_golos.json"
  },
  "arch": {
    "type": "BaselineModel",
    "args": {
      "n_feats": 128,
      "fc_hidden": 512
    }
  },
  "data": {
    "train": {
      "batch_size": 20,
      "num_workers": 5,
      "datasets": [
        {
          "json_filename": "manifest.jsonl",
          "dataset_directory": "/Users/diat.lov/Data/audio_data/golos_opus/train_opus",
          "lmdb": true,
          "map_size": 9e12,
          "dataset_size": 100,
          "max_audio_length": 20
        }
      ]
    },
    "val": {
      "batch_size": 20,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "SGD",
    "args": {
      "lr": 3e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 100,
      "epochs": 50,
      "anneal_strategy": "cos",
      "max_lr": 4e-3,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}
